<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:maxHeight="600dp"
    android:background="@android:color/white">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/background_primary">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button.TextButton"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/btn_close_header"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/text_color_secondary"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="关闭" />
    </LinearLayout>

    <!-- 内容区域（可滚动） -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_secondary"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_folder_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_primary" />
            </LinearLayout>

            <!-- 描述 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描述"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_secondary"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_folder_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_primary"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_no_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="无描述"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_secondary"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 创建时间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建时间"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_secondary"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_folder_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_primary" />
            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginBottom="16dp" />

            <!-- 收藏项目列表容器 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:maxHeight="400dp">

                <!-- 加载视图 -->
                <FrameLayout
                    android:id="@+id/loading_view_items"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    android:gravity="center">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- 列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_star_items"
                    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:visibility="gone"
        android:overScrollMode="never" />

                <!-- 空状态 -->
                <TextView
                    android:id="@+id/tv_empty_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="40dp"
                    android:text="暂无收藏项目"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_secondary"
                    android:gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

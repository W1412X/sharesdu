<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"

        android:theme="@style/Theme.ShareSDU"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="false" />
        <activity
            android:name="com.sharesdu.android.feature.auth.LaunchActivity"
            android:exported="true"
            android:theme="@style/Theme.ShareSDU">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name="com.sharesdu.android.feature.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.ShareSDU" />
        <activity
            android:name="com.sharesdu.android.feature.author.AuthorActivity"
            android:exported="false"
            android:theme="@style/Theme.ShareSDU" />
        <activity
            android:name="com.sharesdu.android.feature.index.PostEditorActivity"
            android:exported="false"
            android:theme="@style/Theme.ShareSDU" />
        <activity
            android:name="com.sharesdu.android.feature.index.CourseEditorActivity"
            android:exported="false"
            android:theme="@style/Theme.ShareSDU" />
        <activity
            android:name="com.sharesdu.android.feature.index.PostHtmlWebViewActivity"
            android:exported="false"
            android:theme="@style/Theme.ShareSDU" />
        <activity
            android:name="com.sharesdu.android.feature.index.PostDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.ShareSDU" />
        <activity
            android:name="com.sharesdu.android.feature.index.CourseDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.ShareSDU" />
    </application>

</manifest>